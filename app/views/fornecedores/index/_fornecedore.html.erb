<%= render(Table::ItemComponent.new(options: { id: dom_id(fornecedore), href: edit_fornecedore_url(fornecedore) })) do |item| %>
  <% item.col(options: { class: 'text-gray-900 whitespace-normal break-words' }) {fornecedore.id.to_s}%>
  <% item.col(options: { class: 'text-gray-900 whitespace-normal break-words' }) {fornecedore.descricao}%>
  <% item.col(options: { class: 'text-gray-900' }) do %>
    <div class="table-component__actions">
      <%= button_to edit_fornecedore_path(fornecedore), method: :get, class: 'hidden group-hover:flex' do %>
        <%= heroicon 'pencil-square', options: { class: 'w-5 h-5 text-gray-500 hover:text-gray-700 mr-1' } %>
      <% end %>
      <%= button_to fornecedore, method: :delete, class: 'hidden group-hover:flex ' do %>
        <%= heroicon 'trash', options: { class: 'w-5 h-5 text-informative-red-500 hover:text-informative-red-700 mr-1' } %>
      <% end %>
    </div>
  <% end %>
<% end %>