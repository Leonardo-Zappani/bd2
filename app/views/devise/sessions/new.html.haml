- content_for(:title, 'Login')
.form-header
  .form-body
    %div{class: "bg-gray-300 w-40  h-40 my-6"}
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "min-[1350px]:mt-[10%] min-[1350px]:px-[15%] w-full p-10" }) do |f|
      .form-group
        = f.label :login
        = f.email_field :email, autofocus: true, placeholder: 'Digite seu usuÃ¡rio', class: 'form-control-input', autocomplete: "email"
        = heroicon 'user-circle', variant: 'outline', options: { class: "stroke-gray-500 absolute right-2.5 bottom-2.5 font-medium rounded-lg text-sm h-5 w-5 "}
      .form-group.pt-6
        = f.label :password, 'Senha'
        = f.password_field :password, placeholder: "*********", class: 'form-control-input', autocomplete: "current-password"
        %button{class: "stroke-gray-500 absolute right-2.5 bottom-2.5 font-medium rounded-lg text-sm h-5 w-5 ", "data-controller": "hello", "data-action": "click->hello#icon", type: "button"}
          = heroicon 'eye-slash',   variant: 'outline', options: { class: "stroke-gray-500"}
          = heroicon 'eye', variant: 'outline', options: {class: "hidden"}
      - if devise_mapping.rememberable?
        .form-group-checkbox.justify-between.my-8
          %div
            = f.check_box :remember_me, class: 'form-control-checkbox'
            = f.label :remember_me, 'Lembrar de mim'
          = render "devise/shared/links"
      .form-group
        = f.submit 'Entrar', class: 'btn--green w-full h-10'
  .panel