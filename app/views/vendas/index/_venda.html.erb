<%= render(Table::ItemComponent.new(options: { id: dom_id(venda), href: edit_venda_url(venda) })) do |item| %>
  <% item.col(options: { class: 'text-gray-900 whitespace-normal break-words' }) {venda.id.to_s}%>
  <% item.col(options: { class: 'text-gray-900 whitespace-normal break-words' }) {}%>
  <% item.col(options: { class: 'text-gray-900 whitespace-normal break-words' }) { }%>
  <% item.col(options: { class: 'text-gray-900 whitespace-normal break-words' }) {}%>
  <% item.col(options: { class: 'text-gray-900 whitespace-normal break-words' }) {venda.horario_venda.to_s}%>
  <% item.col(options: { class: 'text-gray-900' }) do %>
    <div class="table-component__actions">
      <%= button_to edit_venda_path(venda), method: :get, class: 'hidden group-hover:flex' do %>
        <%= heroicon 'pencil-square', options: { class: 'w-5 h-5 text-gray-500 hover:text-gray-700 mr-1' } %>
      <% end %>
      <%= button_to venda, method: :delete, class: 'hidden group-hover:flex ' do %>
        <%= heroicon 'trash', options: { class: 'w-5 h-5 text-informative-red-500 hover:text-informative-red-700 mr-1' } %>
      <% end %>
    </div>
  <% end %>
<% end %>